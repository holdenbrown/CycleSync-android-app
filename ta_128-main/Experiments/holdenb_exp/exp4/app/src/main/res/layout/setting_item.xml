<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/speaker_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_above="@+id/line"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/speaker_setting" />

    <TextView
        android:id="@+id/notifications_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/speaker_icon"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="Notifications"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="9dp"
        android:layout_height="18dp"
        android:layout_above="@+id/line"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/selection_arrow" />

    <View
        android:id="@+id/line"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/notifications_text"
        android:layout_marginTop="15dp"
        android:background="@drawable/grey_line" />



</RelativeLayout>
